if opcion == 1:
    print( "\n") 
    print( "\n Hoy toca rutina de piernas ")
    print( "\n")
elif opcion == 2:
    print( "\n")
    print( "\n Hoy toca rutina de brazos")
    print( "\n")
    exit ()
elif opcion == 3:
    print( "\n")
    print( "\n Hoy toca rutina de ejercicios reto crossfit 1")
    print( "\n")
    exit ()
elif opcion == 4:
    print( "\n")
    print( "\n Hoy toca rutina de ejercicios reto crossfit 2")
    print( "\n")
    exit ()
elif opcion == 5:
    print( "\n")
    print( "\n Hoy toca rutina de cardio")
    print( "\n")
    exit ()
elif opcion == 6:
    print( "\n")
    print( "\n Hoy toca rutina de Zumba")
    print( "\n")
    exit ()
elif opcion == 7:
    print( "\n")
    print( "\n Hoy toca rutina de piscina")
    print( "\n")
    exit ()
